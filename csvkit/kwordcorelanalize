import pandas as pd
from scipy.stats import pearsonr

class KeywordCorrelationAnalyzer:
    def __init__(self):
        self.data = None

    def read_csv(self, file_path):
        self.data = pd.read_csv(file_path)

    def calculate_correlation(self, keyword1, keyword2):
        if self.data is None:
            print("CSV file is not loaded. Please call read_csv() method first.")
            return

        if keyword1 not in self.data.columns or keyword2 not in self.data.columns:
            print("Invalid keyword(s).")
            return

        correlation, _ = pearsonr(self.data[keyword1], self.data[keyword2])
        return correlation
